rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Produtos - leitura pública, escrita apenas para usuários autenticados
    match /Produtos/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Slides - leitura pública, escrita apenas para usuários autenticados
    match /slides/{slideId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Serviços - leitura pública, escrita apenas para usuários autenticados
    match /servicos/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Usuários - apenas o próprio usuário pode ler/escrever seus dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins - apenas usuários autenticados com claim de admin
    match /admins/{adminId} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Fallback para outras coleções - temporário para desenvolvimento
    // REMOVER EM PRODUÇÃO e criar regras específicas
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
